# Genereates a header files that contains a macro definition for each build flag
# that is required by the codebase. This is to avoid sprinkling cflags all over
# the places, which is very fragile especially for our codebase that needs to
# deal with several build systems.
# The way this works is the following:
# - This rule generates a header that contains a bunch of lines like:
#   #define DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_ANDROID_BUILD()
# - The generated header is included by base/build_config.h
# - Source files in the codebase #include base/build_config and use the
#   pattern #if DEJAVIEW_BUILDFLAG(DEJAVIEW_ANDROID_BUILD)
buildflag_gen_dir_ = "$root_gen_dir/$dejaview_root_path/build_config"
action("gen_buildflags") {
  script = "write_buildflag_header.py"
  gen_header_path = "$buildflag_gen_dir_/dejaview_build_flags.h"

  dejaview_component_build = false
  if (defined(is_component_build) && is_component_build) {
    dejaview_component_build = true
  }
  dejaview_force_dlog_on = dejaview_force_dlog == "on"
  dejaview_force_dlog_off = dejaview_force_dlog == "off"

  dejaview_force_dcheck_on = dejaview_force_dcheck == "on"
  dejaview_force_dcheck_off = dejaview_force_dcheck == "off"

  # We can't just use (is_linux || is_android) in dejaview.gni because that
  # doesn't work in Android Mac host builds. We lose the GN notion of OS once
  # we run the tools/gen_xxx generators.
  if (enable_dejaview_watchdog) {
    dejaview_watchdog = "DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_OS_ANDROID() || " +
                        "DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_OS_LINUX()"
  } else {
    dejaview_watchdog = "0"
  }

  # We need local symbolization to run diff tests in chrome.
  if (enable_dejaview_tools ||
      (enable_dejaview_trace_processor && build_with_chromium)) {
    dejaview_local_symbolizer =
        "DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_OS_LINUX() || " +
        "DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_OS_MAC() ||" +
        "DEJAVIEW_BUILDFLAG_DEFINE_DEJAVIEW_OS_WIN()"
  } else {
    dejaview_local_symbolizer = "0"
  }
  response_file_contents = [
    "--flags",  # Keep this marker first.
    "DEJAVIEW_ANDROID_BUILD=$dejaview_build_with_android",
    "DEJAVIEW_CHROMIUM_BUILD=$build_with_chromium",
    "DEJAVIEW_STANDALONE_BUILD=$dejaview_build_standalone",
    "DEJAVIEW_START_DAEMONS=$start_daemons_for_testing",
    "DEJAVIEW_IPC=$enable_dejaview_ipc",
    "DEJAVIEW_WATCHDOG=$dejaview_watchdog",
    "DEJAVIEW_COMPONENT_BUILD=$dejaview_component_build",
    "DEJAVIEW_FORCE_DLOG_ON=$dejaview_force_dlog_on",
    "DEJAVIEW_FORCE_DLOG_OFF=$dejaview_force_dlog_off",
    "DEJAVIEW_FORCE_DCHECK_ON=$dejaview_force_dcheck_on",
    "DEJAVIEW_FORCE_DCHECK_OFF=$dejaview_force_dcheck_off",
    "DEJAVIEW_VERBOSE_LOGS=$dejaview_verbose_logs_enabled",
    "DEJAVIEW_VERSION_GEN=$enable_dejaview_version_gen",
    "DEJAVIEW_TP_PERCENTILE=$enable_dejaview_trace_processor_percentile",
    "DEJAVIEW_TP_LINENOISE=$enable_dejaview_trace_processor_linenoise",
    "DEJAVIEW_TP_HTTPD=$enable_dejaview_trace_processor_httpd",
    "DEJAVIEW_TP_JSON=$enable_dejaview_trace_processor_json",
    "DEJAVIEW_TP_INSTRUMENTS=$enable_dejaview_trace_processor_mac_instruments",
    "DEJAVIEW_LOCAL_SYMBOLIZER=$dejaview_local_symbolizer",
    "DEJAVIEW_ZLIB=$enable_dejaview_zlib",
    "DEJAVIEW_TRACED_PERF=$enable_dejaview_traced_perf",
    "DEJAVIEW_HEAPPROFD=$enable_dejaview_heapprofd",
    "DEJAVIEW_STDERR_CRASH_DUMP=$enable_dejaview_stderr_crash_dump",
    "DEJAVIEW_X64_CPU_OPT=$enable_dejaview_x64_cpu_opt",
    "DEJAVIEW_LLVM_DEMANGLE=$enable_dejaview_llvm_demangle",
    "DEJAVIEW_SYSTEM_CONSUMER=$enable_dejaview_system_consumer",
  ]

  rel_out_path = rebase_path(gen_header_path, "$root_build_dir")
  args = [
    "--out",
    rel_out_path,
    "--rsp",
    "{{response_file_name}}",
  ]

  outputs = [ gen_header_path ]
}

# All targets should depend on this target to inherit the right flags and
# include directories.
group("default_deps") {
  visibility = [ "../*" ]  # Prevent chromium targets from depending on this
                           # (breaks component).
  public_configs = [ ":default_config" ]
  deps = [ ":gen_buildflags" ]
  if (dejaview_build_standalone) {
    public_deps = [
      "//gn/standalone:check_build_deps",
      "//gn/standalone/libc++:deps",
      "//gn/standalone/sanitizers:deps",
    ]
    if (is_android) {
      public_deps += [ "//gn/standalone:check_build_deps_android" ]
    }
  }
}

# The config that all targets in the dejaview codebase inherit by virtue of
# having explicit deps on //gn:default_deps. This config is NOT propagated up to
# embedders that depend on dejaview (e.g. chrome). :public_config (see below) is
# used for that.
config("default_config") {
  visibility = [ "../*" ]  # Prevent chromium targets from depending on this
                           # (breaks component).
  configs = [ ":public_config" ]
  defines = [ "DEJAVIEW_IMPLEMENTATION" ]
  include_dirs = [
    "..",
    "../src/profiling/memory/include",
  ]

  if (build_with_chromium && is_android) {
    # Included for __android_log_print
    libs = [ "log" ]
  }
}

# This config is propagated to embedders via libdejaview. It's also included in
# the default_config above.
config("public_config") {
  include_dirs = [
    "../include",

    # For dejaview_build_flags.h
    buildflag_gen_dir_,

    # For generated files (proto libraries etc). We add the directory here
    # because we stop propagation of the configs for individual proto libraries
    # to avoid duplicate include directory command line flags in compiler
    # invocations, see proto_library.gni, crbug.com/1043279, crbug.com/gn/142.
    "$root_gen_dir/$dejaview_root_path",
  ]
}

config("asan_instrumentation") {
  if (use_sanitizer_configs_without_instrumentation) {
    defines = [ "ADDRESS_SANITIZER_WITHOUT_INSTRUMENTATION" ]
  }
}

