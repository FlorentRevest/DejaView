import("../../../../gn/dejaview.gni")
import("../../../../gn/dejaview_component.gni")

assert(enable_dejaview_ipc)

# Posix specialization of the tracing library for Linux / Android / Mac.
# Provides an IPC transport over a UNIX socket for the service interface.
source_set("service") {
  public_deps = [
    "../../../../include/dejaview/ext/tracing/core",
    "../../../../include/dejaview/ext/tracing/ipc",
  ]
  sources = [
    "consumer_ipc_service.cc",
    "consumer_ipc_service.h",
    "producer_ipc_service.cc",
    "producer_ipc_service.h",
    "relay_ipc_service.cc",
    "relay_ipc_service.h",
    "service_ipc_host_impl.cc",
    "service_ipc_host_impl.h",
  ]
  deps = [
    "..:common",
    "../../../../gn:default_deps",
    "../../../../protos/dejaview/ipc",
    "../../../base",
    "../../core:core",
    "../../service",
  ]
  if (dejaview_component_type == "static_library") {
    deps += [ "../../../ipc:dejaview_ipc" ]
  } else {
    deps += [ "../../../ipc:host" ]
  }
}
